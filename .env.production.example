# Production Environment Variables Template
# Copy this file to .env.production and fill in the actual values

# Database Configuration
DB_USER=proyecto_semilla_prod
DB_PASSWORD=CHANGE_THIS_STRONG_PASSWORD
DB_HOST=localhost
DB_PORT=5432
DB_NAME=proyecto_semilla_prod

# Redis Configuration
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=CHANGE_THIS_TO_A_STRONG_RANDOM_SECRET_64_CHARS_MINIMUM
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Configuration
BACKEND_CORS_ORIGINS=["https://proyecto-semilla.dev", "https://api.proyecto-semilla.dev"]

# Security Configuration
SECRET_KEY=CHANGE_THIS_TO_A_STRONG_RANDOM_SECRET
DEBUG=false
LOG_LEVEL=INFO
COOKIE_SECURE=true
COOKIE_DOMAIN=.proyecto-semilla.dev
COOKIE_SAME_SITE=strict

# Admin Credentials (Change these!)
SEED_ADMIN_PASSWORD=CHANGE_THIS_STRONG_ADMIN_PASSWORD
SEED_DEMO_PASSWORD=CHANGE_THIS_STRONG_DEMO_PASSWORD

# Email Configuration (Optional)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=your-email@gmail.com

# AWS Configuration (for production deployment)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_ECR_REGISTRY=your-account-id.dkr.ecr.us-east-1.amazonaws.com

# Monitoring and Logging
SENTRY_DSN=your-sentry-dsn-here
LOGSTASH_HOST=logstash.proyecto-semilla.dev
LOGSTASH_PORT=5044

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_MARKETPLACE=true
ENABLE_COLLABORATION=true
ENABLE_RATE_LIMITING=true

# Performance Settings
MAX_WORKERS=4
WORKER_TIMEOUT=30
RATE_LIMIT_REQUESTS_PER_MINUTE=1000

# External Services
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# Slack Notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Database Backup
DB_BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
DB_BACKUP_RETENTION_DAYS=30

# SSL/TLS
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/private.key